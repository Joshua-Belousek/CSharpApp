<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Maui.eCom.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Maui.eCom"
    xmlns:views="clr-namespace:Maui.eCom.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Maui.eCom">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Inventory"
        ContentTemplate="{DataTemplate views:InventoryManagementView}"
        Route="InventoryManagement" />
    <ShellContent
        Title="Inventory"
        ContentTemplate="{DataTemplate views:ProductDetails}"
        Route="Product" />
    <ShellContent
        Title="Store"
        ContentTemplate="{DataTemplate views:StoreView}"
        Route="StoreView" />
    <ShellContent
        Title="Shopping Cart"
        ContentTemplate="{DataTemplate views:ShoppingCartView}"
        Route="ShoppingCart" />
    <ShellContent
        Title="Check out"
        ContentTemplate="{DataTemplate views:CheckOutView}"
        Route="Checkout" />
</Shell>
